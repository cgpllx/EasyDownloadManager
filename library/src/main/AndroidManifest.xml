<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.easyandroid.downloadprovider">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application>
        <activity android:name="cc.easyandroid.providers.downloads.ui.DownloadList" />
        <provider
            android:name="cc.easyandroid.providers.downloads.DownloadProvider"
            android:authorities="${AUTHORITY}.downloads" />
        <service android:exported="true" android:name="cc.easyandroid.providers.downloads.DownloadJobService"  android:permission="android.permission.BIND_JOB_SERVICE"/>
        <receiver
            android:name="cc.easyandroid.providers.downloads.DownloadReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
